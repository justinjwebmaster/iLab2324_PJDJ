<div class="auteurCard">
  <!-- Photo de profil -->
  <img src="datas/etudiantsImage/{{ student.photo }}" alt="{{ student.nom }}" class="auteurCard__img">

  <!-- Nom -->
  <h2 class="auteurCard__nom">{{ student.nom }}</h2>

  <!-- Description -->
  <p class="auteurCard__text">
    {{student.description}}
  </p>

  <!-- QR Code -->
  <img src="{{ student.qrImage }}" alt="QR Code du site de {{ student.nom }}" class="auteurCard__qr">


</div>
